
# For documents, please see https://github.com/AdguardTeam/dnsproxy#usage

config dnsproxy 'global'
	option enabled '1'
	option listen_addr '127.0.0.1'
	option listen_port '5350'
	option log_file '/var/dnsproxy.log'
	option all_servers '1'
	option fastest_addr '0'
	option insecure '0'
	option ipv6_disabled '0'
	option max_go_routines ''
	option rate_limit '0'
	option refuse_any '1'
	option udp_buf_size ''
	option verbose '0'

config dnsproxy 'bogus_nxdomain'
	list ip_addr ''

config dnsproxy 'cache'
	option enabled '1'
	option cache_optimistic '1'
	option size '900000'
	option min_ttl '43200'
	option max_ttl '86400'

config dnsproxy 'dns64'
	option enabled '0'
	option dns64_prefix '64:ff9b::'

config dnsproxy 'edns'
	option enabled '0'
	option edns_addr ''

config dnsproxy 'servers'
	list bootstrap '211.138.180.2'
	list bootstrap '211.138.180.3'
	list upstream 'quic://223.5.5.5:853'
	list upstream 'quic://223.6.6.6:853'

